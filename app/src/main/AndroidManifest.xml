<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.meewii.mentalarithmetic">

    <application
        android:name=".core.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.nav.HomeNavActivity"
            android:label="@string/activity_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.nav.PickOperatorNavActivity"
            android:label="@string/activity_pick_operation_type"
            android:parentActivityName=".ui.nav.HomeNavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.nav.HomeNavActivity"/>
        </activity>

        <activity
            android:name=".ui.nav.PickDifficultyNavActivity"
            android:label="@string/activity_pick_difficulty"
            android:parentActivityName=".ui.nav.PickOperatorNavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.nav.PickOperatorNavActivity"/>
        </activity>

        <activity
            android:name=".ui.game.TrainingGameActivity"
            android:label="@string/activity_training_game"
            android:parentActivityName=".ui.nav.PickDifficultyNavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.nav.PickDifficultyNavActivity"/>
        </activity>

        <activity
            android:name=".ui.game.ScoredGameActivity"
            android:label="@string/activity_scored_game"
            android:parentActivityName=".ui.nav.HomeNavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.nav.HomeNavActivity"/>
        </activity>

        <activity
            android:name=".ui.activities.CreditsActivity"
            android:label="@string/activity_credits"
            android:parentActivityName=".ui.nav.HomeNavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.nav.HomeNavActivity"/>
        </activity>

        <activity
            android:name=".ui.score.ScoreActivity"
            android:label="@string/activity_score"
            android:parentActivityName=".ui.nav.HomeNavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.nav.HomeNavActivity"/>
        </activity>

        <meta-data android:name="net.hockeyapp.android.appIdentifier" android:value="${HOCKEYAPP_APP_ID}" />

    </application>

</manifest>