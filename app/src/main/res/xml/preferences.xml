<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/additions">

        <EditTextPreference
            android:key="addition_max"
            android:defaultValue="@string/pref_addition_max_default"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_addition_max_title" />

        <EditTextPreference
            android:key="addition_min"
            android:defaultValue="@string/pref_addition_min_default"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_addition_min_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/subtractions">

        <EditTextPreference
            android:key="subtraction_max"
            android:defaultValue="@string/pref_addition_max_default"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_addition_max_title" />

        <EditTextPreference
            android:key="subtraction_min"
            android:defaultValue="@string/pref_addition_min_default"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_addition_min_title" />

    </PreferenceCategory>

</PreferenceScreen>
